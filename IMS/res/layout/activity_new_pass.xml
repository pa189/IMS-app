<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
   <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:background="#D8D8D8"
     >
     
    <ImageView android:src="@drawable/ims_logo"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:clickable="false"
      
        android:contentDescription="@string/app_name" />
    
    
    <LinearLayout android:layout_width="240dp"
    android:layout_height="40dp"
    android:orientation="vertical"
    
    
    >
   <TextView android:id="@+id/user"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:clickable="false"
        android:layout_gravity="right"
       />
  </LinearLayout>
</LinearLayout>
<ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
     >
    <TextView android:id="@+id/our"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/office1"
        android:textColor="#FFFFFF"
         android:background="#2E2EFE"
       
        android:textSize="20sp"
         />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add1"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
         />
<TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/office2"
        android:textColor="#FFFFFF"
         android:background="#2E2EFE"
       
        android:textSize="20sp"
         />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add2"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
         />
<TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/office3"
        android:textColor="#FFFFFF"
         android:background="#2E2EFE"
       
        android:textSize="20sp"
         />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add3"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
         />
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailhead"
        android:textColor="#FFFFFF"
         android:background="#2E2EFE"
       
        android:textSize="20sp"
         />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
         />
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sitehead"
        android:textColor="#FFFFFF"
         android:background="#2E2EFE"
       
        android:textSize="20sp"
         />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/site"
        android:textStyle="bold"
        android:textSize="12sp"
        android:autoLink="web"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
         />
</LinearLayout>
   </ScrollView>
</LinearLayout>